<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Opcyje">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:text="@string/opcje"
                android:layout_width="match_parent"
                android:layout_height="80dp" android:id="@+id/head_opcje" android:background="@color/colorDrugi"
                android:textColor="#FFFFFF" android:textSize="18sp" android:gravity="center"
                android:fontFamily="@font/coiny"/>
        <Switch
                android:text="@string/d_wi_k"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/sw_dzwiek"
                android:fontFamily="@font/cairo_extralight"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>