<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@drawable/app_bg">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:gravity="center" tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:gravity="center|top"
                android:layout_marginBottom="30dp" tools:ignore="ExtraText">
            <Button
                    android:text="@string/chrapka"
                    android:layout_width="262dp"
                    android:layout_height="89dp" android:id="@+id/chrapka"
                    android:textColor="#FFFFFF" android:fontFamily="@font/cairo_regular"
                    android:background="@drawable/rounded_corners"
                    android:layout_marginBottom="10dp"
                    android:textFontWeight="1000"
                    android:layout_weight="1"/>
            <Button
                    android:text="@string/lod_wka"
                    android:layout_width="262dp"
                    android:layout_height="89dp" android:id="@+id/lodowka"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/cairo_regular"
                    android:layout_marginBottom="10dp"
                    android:textFontWeight="1000"
                    android:background="@drawable/rounded_corners" android:layout_weight="1"/>
            <Button
                    android:text="@string/przepisy"
                    android:layout_width="262dp"
                    android:layout_height="89dp" android:id="@+id/buttonPrzepis"
                    android:background="@drawable/rounded_corners"
                    android:fontFamily="@font/cairo_regular"
                    android:textFontWeight="1000"
                    android:textColor="#ffffff"
                    style="@android:style/Widget.Button"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:gravity="bottom|center"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>