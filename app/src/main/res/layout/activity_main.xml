<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@color/colorPrimary">
    <Button
            android:text="@string/przepisy"
            android:layout_width="140dp"
            android:layout_height="140dp" android:id="@+id/buttonPrzepis"
            android:background="@color/colorAccent"
            android:fontFamily="@font/coiny"
            android:textColor="#ffffff"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.82" app:layout_constraintVertical_bias="0.449"
            android:layout_marginEnd="12dp"/>
    <Button
            android:text="@string/wybor_programu"
            android:layout_width="140dp"
            android:layout_height="140dp" android:id="@+id/buttonProgram"
            android:background="@color/colorAccent"
            android:fontFamily="@font/coiny"
            android:textColor="#ffffff"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.2" app:layout_constraintVertical_bias="0.449"
            android:layout_marginStart="12dp"/>
    <Button
            android:text="@string/o_aplikacji"
            android:layout_width="140dp"
            android:layout_height="140dp" android:id="@+id/buttonOpcje"
            android:background="@color/colorAccent"
            android:fontFamily="@font/coiny"
            android:textColor="#ffffff"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.822" app:layout_constraintVertical_bias="0.727"
            android:layout_marginEnd="12dp" android:layout_marginTop="70dp"/>
    <Button
            android:text="@string/opcje"
            android:layout_width="140dp"
            android:layout_height="140dp" android:id="@+id/buttonInfo"
            android:background="@color/colorAccent"
            android:fontFamily="@font/coiny"
            android:textColor="#ffffff"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.2" app:layout_constraintVertical_bias="0.727"
            android:layout_marginStart="12dp" android:layout_marginTop="70dp"/>
    <TextView
            android:text="@string/tytulMain"
            android:layout_width="0dp"
            android:layout_height="80dp" android:id="@+id/textView"
            android:textAlignment="center"
            android:background="@color/colorDrugi"
            android:fontFamily="@font/coiny"
            android:textColor="#ffffff"
            android:textSize="24dp"
            android:paddingTop="12dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintHorizontal_bias="1.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>