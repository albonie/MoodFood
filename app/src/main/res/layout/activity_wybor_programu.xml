<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".WyborProgramu" android:background="#EEEEEE">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:gravity="center" tools:layout_editor_absoluteY="121dp"
            tools:layout_editor_absoluteX="-16dp"
            android:background="@drawable/app_bg">
        <Button
                android:text="@string/lod_wka"
                android:layout_width="262dp"
                android:layout_height="89dp" android:id="@+id/lodowka"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/coiny"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rounded_corners"/>

        <Button
                android:text="@string/chrapka"
                android:layout_width="262dp"
                android:layout_height="89dp" android:id="@+id/chrapka"
                android:textColor="#FFFFFF" android:fontFamily="@font/coiny"
                android:background="@drawable/rounded_corners"
        />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>